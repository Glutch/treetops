@import assets

*
	vendor(box-sizing, border-box)

body
	display table
	margin 0px
	font-family 'Open Sans', sans-serif
	overflow: hidden

.swosh
	transform translateX(100%)

.icon
	width 30px
	height 30px
	position absolute
	margin-top -44px
	left 13px
	
#log-out
	position absolute
	bottom 10px
	left 20px
	background none
	color #FFF
	font-family 'Open Sans'
	cursor pointer
	border 0px
	z-index 2
  
#login
	position absolute
	top 0px
	right 0px
	width 100%
	height 100%
	background black
	z-index 100
	transition 0.4s
	font-size 49px
	color white
	text-align center
	font-weight 600
	&:after
		content ''
		background url('/images/treetops.jpg')
		background-position center
		background-size 100% 100%
		opacity 0.9
		top 0
		left 0
		bottom 0
		right 0
		position absolute
		z-index -1
	
	::-webkit-input-placeholder {
		color #fff
	}
	:-moz-placeholder {
		color #fff
	}
	::-moz-placeholder {
		color #fff
	}
	:-ms-input-placeholder {
		color #fff
	}

	.loginBox
		width: 300px;
		height: 560px;
		position: fixed;
		right: 50%;
		margin-right: -150px;
		top: 50%;
		margin-top: -280px
		background: rgba(51, 51, 51, 0.95);
		display table
		padding 0px 0px 20px 0px
		transition 0.4s
		transition-delay 0.2s
 
		
		.mainLogo
			padding: 21px 0px 0px 0px;
			font-size: 34px;
		
	form
		.input
			width: 300px;
			background: none;
			border: 0px;
			border-top: 1px solid rgba(255, 255, 255, 0.1);
			padding: 20px 20px 20px 50px;
			color: #FFF;
			display: table;
			margin: 0px auto;
			font-size: 14px;
			font-weight: 200;
			outline: none;
			background: rgba(0, 0, 0, 0.1);
			
			&:nth-last-child(3)
				border-bottom: 1px solid rgba(255, 255, 255, 0.2);
				
			&:first-child
				border-top: 1px solid rgba(255, 255, 255, 0.2);
				border-bottom: 0px;
				margin-top: 20px;
				
		.submit
			padding: 15px 50px;
			background: none;
			color: #FFF;
			border: 1px solid #FFF;
			cursor: pointer;
			transition: 0.1s;
			width: 260px;
			
			&:hover
				background white
				color black

.friends
	.header
		height 50px
		line-height 50px
		padding 0px 20px
		font-weight 600
		text-align center
		font-size 18px

.person
	line-height: 60px;
	height: 60px;
	transition: 0.1s !important;
	cursor: pointer;
	display table

	&:hover
		background #f5f5f5

	.image
		width: 50px;
		height: 50px;
		background: #D06E6E;
		border-radius: 50%;
		float: left;
		margin: 5px 5px 5px 10px;
		
	.name
		height: 31px;
		line-height: 43px;
		float: left;
		width: 215px;
		padding: 0px 10px;
		color: #444;
		
	.recentMessage
		height: 29px;
		width: 215px;
		float: left;
		border-bottom: 1px solid #E7E2E2;
		line-height: 15px;
		padding: 0px 10px;
		font-size: 13px;
		color: #999;
		
	.sidebarName
		color white
	
	.sidebarRecentMessage
		border 0px

.sidebarPerson
	&:hover
		background rgba(0,0,0,0.2)
		
.rightbar
	width 300px
	position fixed
	right 0px
	top 0px
	bottom 0px
	border-left 1px solid #999
	
	.header
		width 300px
		height 60px
		line-height 60px
		font-size 18px
		text-align center
		font-weight 600

.sidebar
	width 300px
	float left
	position fixed
	top 0px
	bottom 0px
	left 0px
	background #2A2E35
	z-index 2
	color: white
	
	.logo
		width 300px
		height 100px
		line-height 100px
		text-align center
		font-size 35px
		font-weight 700
		cursor pointer

	.profile
		width 300px
		text-align center
		padding 30px 0px 20px 0px
		background rgba(0,0,0,0.2)
		
		.image
			width 120px
			height 120px
			border-radius 50%
			margin auto
			overflow hidden
			
			img
				width 120%
				margin -10%
            
		.name
			display table
			text-align center
			width 300px
			font-size 17px
			margin 20px 0px 0px 0px
            
		.location
			display table
			text-align center
			width 300px
			font-size 15px
			color #999
			padding 3px 0px

.content
	position fixed
	font-family inherit
	left 300px
	top 0px
	right 300px
	bottom 70px
	
	.header
		padding 0px 20px
		line-height 70px
		border-bottom 1px solid silver
		height 70px
		
		.image
			width 50px
			height 50px
			background #D06E6E
			border-radius 50%
			float left
			margin 10px 15px 0px 0px
			
		.name
			width 60%
			float left
			
		.rocket
			position absolute
			margin-left -35px
			margin-top 3px
			
		.next
			line-height: 39px;
			height: 40px;
			float: right;
			text-align: center;
			margin: 14px 0px;
			padding: 0px 15px 0px 41px;
			font-size: 14px;
			font-weight: 400;
			cursor: pointer;
			transition: 0.1s !important;
			border 2px solid white
			font-weight 600
	
			&:hover
				-webkit-animation-iteration-count: infinite;
				-webkit-animation-name: example; /* Chrome, Safari, Opera */
				-webkit-animation-duration: 0.2s; /* Chrome, Safari, Opera */
				animation-name: example;
				animation-duration: 0.2s;
				animation-iteration-count: infinite;
		
	.chat
		padding 20px
		position: absolute;
		top: 70px;
		left: 0px;
		right: 0px;
		bottom: 0px;
		overflow-y: scroll;
		
		.message
			padding: 7px 15px;
			border-radius: 18px;
			background: #ECECEC;
			display: table;
			float: left;
			font-size: 14px;
			clear both
			margin-top: 10px

			&:before
				content ''

			&.r
				float right
				background #528DE7
				color #fff

	.chatBox
		position fixed
		left 300px
		right 300px
		bottom 0px
		height 70px
		background white
		padding 0px 40px
		border-top 1px solid silver

		form
			height 100%
			input
				width 100%
				height 100%
				font-size 15px
				border 0px
				outline none
				
/* Chrome, Safari, Opera */
@-webkit-keyframes example {
    0%   {margin-top: -2x}
    25%  {margin-right: -2px}
    50%  {margin-left: -2px}
    100% {margin-bottom: -2px}
}

/* Standard syntax */
@keyframes example {
    0%   {margin-top: -2x}
    25%  {margin-right: -2px}
    50%  {margin-left: -2px}
    100% {margin-bottom: -2px}
}
			