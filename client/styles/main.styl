body{
    display: table;
    margin: 0px;
	font-family: 'Open Sans', sans-serif;
}

#login
	position absolute
	top 0px
	width 100%
	height 100%
	background-image url('/images/treetops.jpg')
	background-position center
	background-size 100%
	z-index 100
	transition 0.6s
	opacity 1
	font-size 49px
	color white
	text-align center
	font-weight 600
	&.swosh
		top -100%
		opacity 0
		
	::-webkit-input-placeholder { /* WebKit browsers */
    color:    #fff;
	}
	:-moz-placeholder { /* Mozilla Firefox 4 to 18 */
	color:    #fff;
	}
	::-moz-placeholder { /* Mozilla Firefox 19+ */
	color:    #fff;
	}
	:-ms-input-placeholder { /* Internet Explorer 10+ */
	color:    #fff;
	}
		
	.loginBox
		width 400px
		height 500px
		position fixed
		left 50%
		margin-left -200px
		top 5%
		
		.mainLogo
			line-height 100px
		
	form
		.input
			width 300px
			background none
			border 0px
			border 1px solid white
			border-bottom 0px
			padding 20px
			color white
			display table
			margin 0px auto
			font-size 14px
			font-weight 200
			outline none
			background rgba(0,0,0,0.1)
			
			&:nth-last-child(2)
				border-bottom 1px solid white
				border-radius 0px 0px 10px 10px
				
			&:first-child
				border-top 1px solid white
				border-bottom 0px
				border-radius 10px 10px 0px 0px
				margin-top 20px
				
		.submit
			padding 20px 50px
			background none
			color white
			border-radius: 10px
			border 1px solid white
			cursor pointer
			transition 0.1s
			
			&:hover
				background white
				color black

.friends
	.header
		height 50px
		line-height 50px
		padding 0px 20px
		font-weight 600
		text-align center
		font-size 18px
		
.person
	line-height: 60px;
	height: 60px;
	transition: 0.1s !important;
	cursor: pointer;

	.image
		width: 50px;
		height: 50px;
		background: #D06E6E;
		border-radius: 50%;
		float: left;
		margin: 5px 5px 5px 10px;
		
	.name
		height: 30px;
		line-height: 47px;
		float: left;
		width: 215px;
		padding: 0px 10px;
		color: #444;
		
	.recentMessage
		height: 29px;
		width: 215px;
		float: left;
		border-bottom: 1px solid #E7E2E2;
		line-height: 20px;
		padding: 0px 10px;
		font-size: 13px;
		color: #999;
		
.person:hover
	background #f5f5f5
			
.rightbar
	width 300px
	position fixed
	right 0px
	top 0px
	bottom 0px
	border-left 1px solid #999
	
	.header
		width 300px
		height 60px
		line-height 60px
		font-size 18px
		text-align center
		font-weight 600

.sidebar
	width 300px
	float left
	position fixed
	top 0px
	bottom 0px
	left 0px
	background #fff
	border-right: 1px solid #999
	z-index 2
	
	.logo
		width 300px
		height 100px
		line-height 100px
		text-align center
		font-size 35px
		font-weight 700
		cursor pointer
		border-bottom 1px solid silver

	.profile
		width 300px
		text-align center
		display table
		border-bottom 1px solid silver
		padding 30px 0px 20px 0px
		background #F5F5F5
		
		.image
			width 120px
			height 120px
			border-radius 50%
			margin auto
			overflow hidden
			border 2px solid
			
			img
				width 120%
				margin -10%
            
		.name
			display table
			text-align center
			width 300px
			font-size 17px
			margin 20px 0px 0px 0px
            
		.location
			display table
			text-align center
			width 300px
			font-size 15px
			color #999
			padding 3px 0px

.content
	position fixed
	font-family inherit
	left 300px
	top 0px
	right 300px
	bottom 70px
	
	.header
		padding 0px 20px
		line-height 70px
		border-bottom 1px solid silver
		height 70px
		
		.image
			width 50px
			height 50px
			background #D06E6E
			border-radius 50%
			float left
			margin 10px 15px 0px 0px
			
		.name
			width 60%
			float left
			
		.next
			border: 1px solid #4780D7;
			border-radius: 14px;
			line-height: 42px;
			height: 40px;
			float: right;
			text-align: center;
			margin: 14px 0px;
			padding: 0px 15px;
			font-size: 14px;
			font-weight: 400;
			cursor: pointer;
			transition 0.1s !important;
			
		.next:hover
			background #4780D7
			color white
		
	.chat
		padding 20px
		position: absolute;
		top: 70px;
		left: 0px;
		right: 0px;
		bottom: 0px;
		overflow-y: scroll;
		
		.message
			padding: 7px 15px;
			border-radius: 18px;
			background: #ECECEC;
			display: table;
			float: left;
			font-size: 14px;
			clear both
			margin-top: 10px
			
		.r
			float right
			background #528DE7
			color #fff
	
	.chatBox
		position fixed
		left 300px
		right 300px
		bottom 0px
		height 70px
		background white
		padding 0px 40px
		border-top 1px solid silver
        
		form
			height 100%
			
			input
				width 100%
				height 100%
				font-size 15px
				border 0px
				outline none
			